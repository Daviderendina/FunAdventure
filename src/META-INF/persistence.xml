<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd" version="2.1">
    <persistence-unit name="ToplinkExample" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>model.account.Person</class>
        <class>model.account.Address</class>
        <class>model.account.Place</class>
        <class>model.account.Telephone</class>
        <class>model.account.Customer</class>
        <class>model.account.Cabin</class>
        <class>model.account.Reservation</class>
        <class>model.account.hierarchy.TypeA</class>
        <class>model.account.hierarchy.TypeB</class>
        <class>model.account.hierarchy.TypeC</class>
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.scripts.create-target" value="sampleCreate.ddl"/>
            <property name="javax.persistence.schema-generation.scripts.drop-target" value="sampleDrop.ddl"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/db2"/>
            <property name="javax.persistence.jdbc.user" value="processo1"/>
            <property name="javax.persistence.jdbc.password" value="processo"/>
        </properties>
    </persistence-unit>
</persistence>

<persistence>
    <persistence-unit name="" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

    </persistence-unit>
</persistence>